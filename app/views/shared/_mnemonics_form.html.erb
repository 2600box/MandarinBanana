<div class="center">
<%= form_for(@mnemonic) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
<div>
  <%= f.text_area :aide, placeholder: "...", onclick: 'saveCursorPosition();' %>
  <br/>
  <% unless @snippets.empty? %>
    <ul id="snippetsul">
      <% @snippets.each do |s| %>
        <li onclick="insertAtCursor(event)"><%= s %></li>
      <% end %>
    </ul>
  <% end %>
  <%= f.hidden_field :gorodish_id, :value => @id if @parent == "gorodishes" %>
  <%= f.hidden_field :pinyindefinition_id, :value => @id if @parent == "pinyindefinitions" %>
  <br/>
  <br/>
</div>
<%= f.submit "Submit", class: "btn btn-large btn-primary" %>
<% end %>
</div>
