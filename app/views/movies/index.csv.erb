<% if signed_in? %>
  <%- @subtitles.each do |s| -%>
    <% @vocabulary = s.vocabulary %>
    <% @voc = "" %>
    <% @voc << "<table>" %>
    <% @vocabulary.each do |v| %>
      <% @voc << '<tr><td class="voc-left">' %>
      <% if v[0] == "----------" %>
        <% @voc << "----------" %>
      <% else %>
        <% v[0].each_char do |char| %>
  	  <% @voc << "<a href=\"https://mandarinbanana.herokuapp.com/hurl/#{char}\">#{char}</a>" %>
	<% end %>
      <% end %>
      <% @voc << "<\/td><td class=\"voc-right\">" %>
      <% v[1].each do |w| %>
	<% @voc << "#{w}<br\/>" %>
      <% end %>
      <% @voc << "<\/td><\/tr>" %>
    <% end %>
    <% @voc << "<\/table>" %>
<%= CSV.generate_line([s.sentence, "[sound:#{s.filename}.ogv]", @voc.to_s], col_sep: "\t", quote_char:"\0").html_safe %>
  <%- end -%>
<% end %>
