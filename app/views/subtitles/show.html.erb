<% provide(:title, @subtitle.sentence) %>
<h3><%= Movie.find(@subtitle.movie_id).title %></h3>

<iframe id="ytplayer" type="text/html" width="640" height="390"
  src="https://www.youtube.com/embed/<%= Movie.find(@subtitle.movie_id).youtube_id %>?autoplay=1&rel=0&start=<%= @subtitle.start %>&end=<%= @subtitle.stop %>"
  frameborder="0"></iframe><br/><br/>

<%= previous_for @subtitle %> <%= @subtitle.sentence %> <%= next_for @subtitle %><br/>
Start: <%= @subtitle.start %><br/>
Stop: <%= @subtitle.stop %><br/>

<% if @subtitle.comments.any? %>
<div>
  <h3> Comments (<%= @subtitle.comments.count %>)</h3>
  <ol class="comments">
    <%= render @comments %>
  </ol>
</div>
<% end %>

<% if signed_in? %>
<div>
  <%= render 'shared/comment_form' %>
</div>
<% end %>
