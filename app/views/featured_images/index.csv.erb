<% if signed_in? %>
  <% FeaturedImage.all.each do |fimage| %>
    <% @id = fimage.id %>
    <% if [101].include? @id  %>
      <% next %>
    <% end %>
    <% @pd = fimage.pinyindefinition %>
    <% @p1 = @pd.pinyin %>
    <% @p2 = "= " + @pd.gbeginning + " + " + @pd.gending %>
    <% @hanzi = fimage.hanzi %>
    <% if @hanzi.components != '' %>
      <% @dec = @hanzi.character + "=" + @hanzi.components.split(//).join('+').to_s %>
    <% else %>
      <% @dec = " " %>
    <% end %>
    <% @def = fimage.pinyindefinition.definition %>
    <% @appearances = "" %>
    <% Hanzi.where('components LIKE ?', "%#{@hanzi.character}%").each do |h| %>
      <% @appearances += h.character %>
    <% end %>
    <% @story = fimage.mnemonic_aide %>
    <% @examples = [] %>
    <% fimage.hanzi.examples.each do |e| %>
      <% @examples.push(e.subtitle.filename) unless e.subtitle == nil %>
    <% end %>
<%= CSV.generate_line([fimage.hanzi.character, @p1, @p2, @dec, @def, @appearances, fimage.data, @story, @id, @examples.to_s.tr('[]" ', '')], col_sep: "\t", quote_char: "\0", row_sep: ?\t).html_safe %>
  <% end %>
<% end %>
